{
    // editor
    "editor.renderWhitespace": "all",
    "editor.dragAndDrop": false, // disable the dumb mouse drag and drop feature
    "editor.fontSize": 14,
    "editor.bracketPairColorization.enabled": true,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Cascadia Code",
    "editor.stickyScroll.enabled": false, // get rid of the sticky window on top that shows where the block begins

    "python.analysis.autoImportCompletions": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "search.useIgnoreFiles": false,
    "workbench.editorLargeFileConfirmation": 100,
    "workbench.startupEditor": "none", // disable the welcome page
    "scm.alwaysShowActions": true,

    // git
    "git.openDiffOnClick": true,
    "git.autofetch": true,
    "git.showInlineOpenFileAction": true,
    "git.ignoreRebaseWarning": true,
    "git.replaceTagsWhenPull": true,

    // terminal
    "terminal.integrated.scrollback": 10000, // use the same font as the code
    "terminal.integrated.fontFamily": "Cascadia Code",
    "terminal.integrated.hideOnStartup": "always", // hide the terminal when starting a new window

    "workbench.colorCustomizations" : {
        "terminal.foreground" : "#000000",
        "terminal.background" : "#ffffff",
        "terminal.selectionBackground": "#000000",
        "editorBracketMatch.background": "#ff000088",
        "editorBracketMatch.border": "#ff000088",
        "statusBarItem.remoteBackground": "#4c1b5f",
        "editorBracketHighlight.foreground1": "#b88cff",
        "editorBracketHighlight.foreground2": "#0bafd8",
        "editorBracketHighlight.foreground3": "#54b474",
        "editorBracketHighlight.foreground4": "#ff9900",
        "editorBracketHighlight.foreground5": "#c4c718",
        "editorBracketHighlight.foreground6": "#ff0000",
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation":false,
        "editor.rulers": [100],
    },

    // explorer (left panel)
    "explorer.compactFolders": false, // compact folders make it hard to see nested folders
    "explorer.enableDragAndDrop": true,
    "explorer.confirmDragAndDrop": false,

    // GitLens (by GitKraken) extension
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,

    // Markdown Preview Github Styling (by Matt Bierner) extension
    "markdown-preview-github-styles.colorTheme": "light",

    // Markdown PDF (by yzane) extension
    "markdown-pdf.displayHeaderFooter": false,
}